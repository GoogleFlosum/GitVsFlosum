<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>If_Fullname_is_populated_then_require_BD</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK(Full_Name__c)),
ISBLANK( Birthdate__c)
)</errorConditionFormula>
    <errorMessage>Birthdate is required when Fullname is populated</errorMessage>
</ValidationRule>
